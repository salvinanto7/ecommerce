<section class="m-5">
  <div class='container'>
    <h3>
      Shipping Details
    </h3>
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <form action='/check-out' method="post">
        <div class='form-group mt-4'>
          <label for=''>
            Name
          </label>
          <input
            type='text'
            class='form-control'
            name='name'
            placeholder='Name'
          />
        </div>
        <div class='form-group mt-4'>
          <label for=''>
            Address
          </label>
          <input
            type='text'
            class='form-control'
            name='address'
            placeholder='Address'
          />
        </div>
        <div class='form-group mt-4'>
          <label for=''>
            Pincode
          </label>
          <input
            type='text'
            class='form-control'
            name='pincode'
            placeholder='Pincode'
          />
        </div>
      </form>
    </div>
    <div class="col-md-4 ml-auto mr-5 border border-info rounded">
        <h4 class="text-center m-4">Cart Details</h4>
        <ul>
        {{#each cartProds}}
        <li>{{this.product.name}} ({{this.quantity}}) - {{this.product.price}}</li>
        {{/each}}
        </ul>
        <p>Total : {{total}}</p>
        <h6 class="mt-4"><b>Payment Option</b></h6>
        <div class="form-group m-2">
            <input type="radio">
            <label for="">Cash On Delivery(COD)</label>
        </div>
        <a href="/check-out" class="btn btn-primary float-right m-3">Check out</a>
    </div>
  </div>
</section>