<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Product</a>
        </div>
    </div>
    <div class="container mt-4">
  <table class='table mt-5' id="productsTable">
    <thead>
      <tr>
        <th scope='col'>
          #
        </th>
        <th scope='col'>
          Name
        </th>
        <th scope='col'>
          Category
        </th>
        <th scope='col'>
          Description
        </th>
        <th scope='col'>
          Price
        </th>
        <th scope='col'>
          Images
        </th>
        <th scope='col'>
          Options
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each products}}
        <tr>
          <th scope='row'>
            {{this.num}}
          </th>
          <td>
            {{this.name}}
          </td>
          <td>
            {{this.category}}
          </td>
          <td>
            {{this.description}}
          </td>
          <td>
            {{this.price}}
          </td>
          <td>
            <img src="/product-images/{{this._id}}.jpg" alt='' style='width:50px;height:50px;' />
          </td>
          <td>
            <a class="btn btn-primary" href="/admin/edit-product/{{this._id}}">Edit</a>
            <a class="btn btn-danger" href="/admin/delete-product/{{this._id}}" onclick="return confirm('Are you sure to delete {{this.name}}?')">Delete</a>
          </td>
          
        </tr>
      {{/each}}
    </tbody>
  </table>
  </div>
</section>

<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>